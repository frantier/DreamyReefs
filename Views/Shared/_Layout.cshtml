        document.getElementById('inicio').addEventListener('click', function () {
            event.preventDefault();

            var loader = document.getElementById('loader');
            loader.style.display = 'flex';
            loader.classList.add('fade-in');

            var duracionLoader = 1400;

            // Cargar la página después de que el loader haya aparecido
            setTimeout(function () {
                window.location.href = '/';
            }, duracionLoader);

            // Ocultar el loader después de que la página se haya cargado completamente
            window.addEventListener('load', function () {
                loader.classList.remove('fade-in');
                loader.classList.add('fade-out');

                setTimeout(function () {
                    loader.style.display = 'none';
                    loader.classList.remove('fade-out');
                }, 300); // Ajusta la duración de la animación de salida aquí
            });
        });

