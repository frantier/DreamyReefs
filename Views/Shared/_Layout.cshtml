                            <li class="active"><a id="inicio" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
                            <li><a id="tours" asp-area="" asp-controller="Tour" asp-action="Index2">Tours</a></li>
                            <li><a id="acerca" asp-area="" asp-controller="Acercade" asp-action="Index">Acerca de</a></li>
                            <li class="active"><a id="review" asp-area="" asp-controller="Review"
                                    asp-action="Index2">Comentarios</a></li>
                        </ul>
                    </div>
                    &ensp;
                </div>
            </div>
            <div>
                <a href="https://wa.me/524495168427" class="btn-wsp" target="_blank">
                    <i class="fa fa-whatsapp icono"></i>
                </a>
            </div>


    </header>
    <div class="container2">
        <main role="main" class="pb-3">
