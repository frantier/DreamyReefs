@model DreamyReefs.Models.Review
@{
    ViewData["Title"] = "Reviews";
    Layout = "_LayoutSitioGestion";
}

<link rel="stylesheet" href="~/css/Cards.css" />

<div class="layout-page">
    <br />
    <br />
    <h1 style="text-align: center;" data-aos="zoom-in" data-aos-duration="900">Actualizar opinión</h1>
    <div class="ms-4 me-4 mt-4 mb-4">
        <div data-aos="fade-up" data-aos-duration="1000">
            <div class="row row-cols-1 row-cols-md-2 justify-content-center">
                <div class="col">
                    <div class="card m-2" style="background-color: whitesmoke;border: 3px solid gray;">
                        <div class="card-body">
                            <div class="d-flex justify-content-center">
                                <h6 class="fw-medium" style="color: rgb(40, 180, 99);"></h6>
                            </div>
                            <div>
                                <form asp-action="Actualizar" method="post">
                                    <div>
                                        <label asp-for="IDReviews" hidden>IDReviews</label>
                                        <input asp-for="IDReviews" placeholder="IDReviews" class="form-control"
                                            hidden />
                                    </div>
                                    <div>
                                        <label asp-for="TourID">Nombre del Tour</label>
                                        <input asp-for="TourID" placeholder="Nombre del Tour" class="form-control" />
                                        <span asp-validation-for="TourID" class="text-danger"></span>
                                    </div>
                                    <div>
                                        <label asp-for="Comentario" class="form-label">Comentario</label>
                                        <textarea asp-for="Comentario" placeholder="Comentario" class="form-control"
                                            id="comentarioTextarea" style="text-align: justify;"></textarea>
                                        <span asp-validation-for="Comentario" class="text-danger"></span>
                                    </div>
                                    &ensp;
                                    <div class="d-flex justify-content-end">
                                        <input type="submit" value="Publicar opinión" class="btn btn-warning btn-md" />
                                        &ensp;
                                        <a asp-action="Index" class="btn btn-primary btn-md">Volver al listado</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    window.addEventListener('DOMContentLoaded', (event) => {
        const textarea = document.getElementById('comentarioTextarea');
        textarea.style.height = 'auto';
        textarea.style.height = textarea.scrollHeight + 'px';
    });

    document.getElementById('comentarioTextarea').addEventListener('input', function () {
        this.style.height = 'auto';
        this.style.height = this.scrollHeight + 'px';
    });
</script>
