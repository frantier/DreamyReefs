@{
    ViewData["Title"] = "Comentarios";
    Layout = "_Layout";
    List<Review> listaReview = Model;
}

<!DOCTYPE html>

<html>

<head>
    <!-- basic -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- mobile metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <!-- site metas -->
    <title>Comentarios</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="stylesheet" type="text/css" href="~/css/Container.css">
    <!-- bootstrap css -->
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.min.css">
    <!-- style css -->
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
    <!-- Responsive-->
    <link rel="stylesheet" href="~/css/responsive.css">
    <!-- fevicon -->
    <link rel="icon" href="images/fevicon.png" type="image/gif" />
    <!-- Scrollbar Custom CSS -->
    <link rel="stylesheet" href="~/css/jquery.mCustomScrollbar.min.css">
    <!-- Tweaks for older IEs-->
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">
    <!-- fonts -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,700|Righteous&display=swap" rel="stylesheet">
    <!-- owl stylesheets -->
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css"
        media="screen">
</head>

<body>
    @if (Model == null || Model.Count == 0)
    {
        <div class="layout-page">
            <br />
            <br />
            <div class="row justify-content-center">
                <div class="col-md-8 ">
                    <div class="card">
                        <h1 style="text-align: center;" data-aos="zoom-in" data-aos-duration="900">No hay Reviews para
                            mostrar</h1>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="layout_padding">
            <div class="ms-5 me-5 mt-5 mb-5">
                <div class="row justify-content-center" data-aos="fade-up" data-aos-duration="1000">
                    <div class="container-fluid" style="align-content:center;">
                        <h1 style="text-align: center;" data-aos="zoom-in" data-aos-duration="900">Reviews</h1>
                        <div class="row">
                            @foreach (var reviews in Model)
                            {
                                <div class="col-md-4">
                                    <div class="card2 m-2"
                                        style="background-color: whitesmoke;border: 2px solid rgb(0 63 124);">
                                        <div class="col-md-12">
                                            <div class="image-container">
                                                <img src="https://cdn.forbes.com.mx/2023/04/francesco-ungaro-MJ1Q7hHeGlA-unsplash-scaled.jpg" alt="Imagen del tour"
                                                    class="tour-image img-fluid" style="border-radius: 15px;">
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <div>
                                                <div>
                                                    <label style="font-size: medium; font-weight: bold; display: inline-block;"
                                                        hidden>TourID:</label>
                                                    <h6 class="card-title" style="display: inline-block;" hidden>
                                                        @reviews.IDReviews</h6>
                                                </div>

                                                <div>
                                                    <h5 class="card-title"
                                                        style="display: inline-block;justify;font-weight: normal !important;">
                                                        <strong>Tour:</strong> @ViewBag.Tours[reviews.TourID]</h5>
                                                </div>

                                                <div>
                                                    <h6 class="card-title"
                                                        style="text-align: justify;font-weight: normal !important;">Comentario:
                                                        @reviews.Comentario</h6>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    &ensp;
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</body>

</html>
