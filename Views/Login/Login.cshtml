@model DreamyReefs.Models.AccesoWeb
@{
    ViewData["Title"] = "DreamyReefs";
    Layout = "_LayoutLogin";
}

<div class="container3">
    <div class="ms-4 me-4 mt-4 mb-4">
        <div class="row row-cols-1 row-cols-md-2 justify-content-center">
            <div class="col-lg-12">
                <div class="card m-2">
                    <div class="card-body">
                        <div>
                            <form asp-action="Login" asp-controller="Login" method="post">
                                <div>
                                    <label asp-for="Correo" class="form-label">Correo:</label>
                                    <input asp-for="Correo" placeholder="Ingresa tu correo electrónico"
                                        class="form-control" />
                                    <span asp-validation-for="Correo" class="text-danger"></span>
                                </div>
                                <div>
                                    <label asp-for="Contrasena" class="form-label">Contraseña:</label>
                                    <input asp-for="Contrasena" placeholder="Ingresa tu contraseña" class="form-control"
                                        type="password" />
                                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                                </div>
                                &ensp;
                                <div class="d-flex justify-content-center">
                                    <input type="submit" value="Iniciar sesión" class="btn btn-success d-grid w-100" />
                                </div>
                                <div class="d-flex justify-content-center">
                                    <label class="alert-danger">@ViewBag.Error</label>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>