@model DreamyReefs.Models.AccesoWeb
@{
    ViewData["Title"] = "Actualizar";
    Layout = "_LayoutSitioGestion";
}

    <div class="layout-page">
        <br />
        <br />
        <h1 style="text-align: center;" data-aos="zoom-in" data-aos-duration="900">Actualizar Usuario</h1>
        <div class="ms-4 me-4 mt-4 mb-4">
            <div data-aos="fade-up" data-aos-duration="1000">
                <div class="row row-cols-1 row-cols-md-2 justify-content-center">
                    <div class="col">
                        <div class="card m-2">
                                <div class="card-body">
                                    <div class="d-flex justify-content-center">
                                        <h6 class="fw-medium" style="color: rgb(40, 180, 99);"></h6>
                                    </div>
                                    <div>
                                        <form asp-action="Actualizar" method="post">
                                            <div>
                                                <label asp-for="IDAccesoWeb" hidden></label>
                                                <input asp-for="IDAccesoWeb"
                                                    placeholder="ID" readonly hidden class="form-control"/>
                                            </div>
                                            <div>
                                                <label asp-for="Usuario"></label>
                                                <input asp-for="Usuario"
                                                    placeholder="Usuario" class="form-control"/>
                                                <span asp-validation-for="Usuario" class="text-danger"></span>
                                            </div>
                                            <div>
                                                <label asp-for="Nombre" class="form-label" hidden>Nombre</label>
                                                <input asp-for="Nombre"
                                                    placeholder="Nombre Completo" hidden class="form-control"/>
                                                <span asp-validation-for="Nombre" class="text-danger"></span>
                                            </div>
                                            <div>
                                                <label asp-for="Correo" class="form-label">Correo</label>
                                                <input asp-for="Correo"
                                                    placeholder="Correo electronico" class="form-control"/>
                                                <span asp-validation-for="Correo" class="text-danger"></span>
                                            </div>
                                            <div>
                                                <label asp-for="Contrasena" class="form-label">Contraseña</label>
                                                <input asp-for="Contrasena"
                                                    placeholder="Contraseña" class="form-control"/>
                                                <span asp-validation-for="Contrasena" class="text-danger"></span>
                                            </div>
                                            <div>
                                                <label asp-for="Estatus" class="form-label" hidden>Estatus</label>
                                                <input asp-for="Estatus"
                                                    placeholder="Estatus" hidden value="Activo" class="form-control"/>
                                            </div>
                                            <div class="d-flex justify-content-center">
                                                <input type="submit" value="Actualizar" class="btn btn-warning d-grid w-100"/>
                                                <a asp-action="Index" class="btn btn-primary d-grid w-100">Volver al listado</a>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>